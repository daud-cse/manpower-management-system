@model  List<MMS.Entities.Models.RoleRightss>
@using (Html.BeginForm("Create", "RoleRights", FormMethod.Post, new { @id = "RoleRightForm" }))
{
    
    <div class="row">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                   
                    <th>
                        @Html.DisplayName("Rights Name")

                    </th>
                   

                    <th>
                        @Html.DisplayName("Is Permission")
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i=0 ;i<Model.Count;i++)
                {
                    <tr>
                        @Html.HiddenFor(modelItem=>Model[i].ID)
                        @Html.HiddenFor(modelItem => Model[i].RoleId)
                        @Html.HiddenFor(modelItem => Model[i].RightId)
                        <td>
                            @Html.DisplayFor(modelItem => Model[i].Rightss.RightsName)
                        </td>
                       
                        <td>
                            @Html.CheckBoxFor(modelItem => Model[i].IsActive)
                      
                        </td>


                    </tr>
                }
            <tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="btn-toolbar">
                <input type="submit" value="Create" class="btn-primary btn" onclick=" return AddConfirm()" />
            </div>
        </div>
    </div>

}

