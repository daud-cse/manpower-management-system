@model  MMS.SECURITY.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style type="text/css">
    /*.input-validation-error {
        background: pink;
        border: 1px solid red;
    }

    .help-block {
        color: red;
    }*/
    .row {
        margin-left: 0px;
        margin-right: 0px;
    }

    footer {
        margin-left: 0px;
        border-top: 0px;
    }
</style>
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="panel panel-info">
        <div class="panel-heading">
            User Login
        </div>
        <div class="panel-body">

            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label" })
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="form-group" style="margin-top: 10px">
                <div class="col-sm-12 controls">
                    <div class="col-sm-4 controls">
                    </div>
                    <div class="col-sm-8 controls">
                        <button class="btn btn-info">Sign In</button>
                    </div>
                </div>

            </div>
            <div class="form-group" style="margin-top: 10px">
                <div class="col-sm-12 controls">
                    &nbsp;
                </div>
            </div>
            @*</form>*@
            <div class="lregister">
                Don't have an MPMS Account? <a href="#">Register</a>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}