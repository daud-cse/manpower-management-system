@model MMS.Entities.Models.BankAccountInfo

@{
    ViewBag.Title = "BankAccount Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/dist/css/bootstrap-select.css">
<script type="text/javascript">
    $(document).ready(function () {

    });



</script>

<script src="~/dist/js/bootstrap-select.js"></script>
@section breadcrumb
{
    <li><a href="~/Dashboard/index">Dashboard</a></li>
    <li>Administration</li>
    <li class="active">BankAccount Setup</li>
}
@*@section title
    {
        @ViewBag.Title
    }*@

<style type="text/css">
    input, select, textarea {
        max-width: 100%;
    }

    .backTolist {
        font-size: 1em;
        font-weight: normal;
    }

        .backTolist:hover {
            text-decoration: none;
        }

    .fileSets {
        border: 1px dotted #ddd;
        margin: 0px 10px 20px 0;
        padding: 20px 10px 0px 10px;
    }

    .required:after {
        content: " *";
        color: #f00;
    }

    legend.scheduler-border {
        width: inherit; /* Or auto */
        padding: 0 10px; /* To give a bit of padding on the left and right */
        border-bottom: none;
    }
</style>
<p> @Html.ActionLink("Go Back to BankAccount List", "Index", null, null, new { @class = "btn btn-success btn-xs" })</p>
<hr />

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    @Html.HiddenFor(x=>x.ID)
    @Html.HiddenFor(x=>x.BankAccountAutoId)
    <div class="panel panel-info">

        <div class="panel-heading">
            @ViewBag.Title.ToString()

        </div>
        <div class="panel-body">
            <div class="row">

                <div class="col-sm-12">
                    <fieldset class="fileSets">
                        <legend class="scheduler-border">BankAccount Info</legend>
                        <div class="form-group">

                            @Html.LabelFor(model => model.Name, new { @class = "col-sm-4 control-label required" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>


                        <div class="form-group">

                            @Html.LabelFor(model => model.BankAccountNo, new { @class = "col-sm-4 control-label required" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.BankAccountNo, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.BankAccountNo)
                            </div>
                        </div>

                        <div class="form-group">

                            @Html.LabelFor(model => model.CurrentBalance, new { @class = "col-sm-4 control-label required" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.CurrentBalance, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.CurrentBalance)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.AccountOpeningDate, new { @class = "col-sm-4 control-label required" })
                            <div class="col-sm-4">

                                <input class="form-control mask" required data-inputmask="'alias': 'date'" value="@Model.AccountOpeningDate" id="AccountOpeningDate" name="AccountOpeningDate" type="text" aria-required="true">
                                @Html.ValidationMessageFor(model => model.AccountOpeningDate)

                            </div>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.AccountClosingDate, new { @class = "col-sm-4 control-label required" })
                            <div class="col-sm-4">

                                <input class="form-control mask" required data-inputmask="'alias': 'date'" value="@Model.AccountClosingDate" id="AccountClosingDate" name="AccountClosingDate" type="text" aria-required="true">
                                @Html.ValidationMessageFor(model => model.AccountClosingDate)

                            </div>

                        </div>
                        <div class="form-group">

                            @Html.LabelFor(model => model.BankAccountTypeId, new { @class = "col-sm-4 control-label required" })
                            <div class="col-sm-4">
                                @Html.DropDownListFor(model => model.BankAccountTypeId, new SelectList(Model.kvpBankAccountType, "Key", "Value", Model.BankAccountTypeId), "Select Account Type", new { @class = "" })
                                @Html.ValidationMessageFor(model => model.BankAccountTypeId)
                            </div>
                        </div>
                        <div class="form-group">

                            @Html.LabelFor(model => model.BankName, new { @class = "col-sm-4 control-label required" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.BankName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.BankName)
                            </div>
                        </div>


                        <div class="form-group">

                            @Html.LabelFor(model => model.BranchName, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.BranchName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.BranchName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="checkbox" class="col-sm-4 control-label"></label>
                            <div class="col-sm-4">
                                <div class="checkbox block">
                                    <label>
                                        @Html.CheckBoxFor(model => model.IsActive) @Html.LabelFor(model => model.IsActive)
                                    </label>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-8 col-sm-offset-3">
                    <div class="btn-toolbar">
                        <input type="submit" value="Create" class="btn-primary btn" onclick=" return AddConfirm()" />
                    </div>
                </div>
            </div>


        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/Mask")
    @Scripts.Render("~/bundles/jqueryval")
}
