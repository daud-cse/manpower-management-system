@using MvcPaging
@model MvcPaging.IPagedList<MMS.Entities.Models.FMS_Transaction>
@{
    ViewBag.Title = "Un-Approved Transaction List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#page-leftbar li").removeClass("active");
        $("#liProject").addClass("active");
    });
</script>

@section breadcrumb
{
    <li><a href="~/Dashboard/index">Dashboard</a></li>
    <li>FMS Operation</li>
    <li class="active">Transaction List</li>
}
@section title
{
    @ViewBag.Title
}
<style type="text/css">
    .form-inline .form-control {
        width: 100%;
    }

    .form-inline input {
        max-width: 100%;
        width: 100%;
    }

    .form-inline .form-group {
        width: 80%;
    }

    /*.margin {
        margin-top: 20px;
        margin-bottom: 20px;
    }*/
</style>
@using (Html.BeginForm("Index", "Transaction", FormMethod.Get))
{
    <div class="row margin">
        <div class="col-md-5">
            @*@if ((GolbalSession.gblSession.UserRights.Exists(x => x.Equals(18))))
                {*@
            @*<p>
                    @Html.ActionLink("Create New", "Create")
                </p>*@
            @*}*@
        </div>
        @*<div class="form-inline col-md-6" style="margin-bottom: 20px">

                <div class="form-group">
                    <input type="text" class="form-control " id="searchItem" name="searchItem" placeholder="Search item" value="@ViewData["searchItem"]">
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </div>*@
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().VoucherId)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().FMS_VoucherType.VoucherTypeName)

                </th>

                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().TransactionDate)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().TranactionAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().IsApproved)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().IsPosted)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.VoucherId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FMS_VoucherType.VoucherTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionDate)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TranactionAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsApproved)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPosted)
                    </td>
                    <td>
                        <div class="btn-group">
                            <button aria-expanded="false" data-toggle="dropdown" class="btn btn-default btn-xs dropdown-toggle" type="button">Action <span class="caret"></span></button>
                            <ul role="menu" class="dropdown-menu dropdown-menu-right">
                                @*<li>@Html.ActionLink("Edit", "Edit", "TransactionVM", new { id = item.TransactionId }, new { })</li>
                                    <li class="divider"></li>*@
                                @*//if ((GolbalSession.gblSession.UserRights.Exists(x => x.Equals(9))))
                                    //{*@
                                @if (GolbalSession.gblSession.RoleId == "1")
                                {
                                    <li>@Html.ActionLink("Voucher", "GetVoucherByTransactionId", "FMSReports", new { TransactionId = item.TransactionId }, new { target = "_blank" })</li>
                                }
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Approved", "TransactionApprovedForDayClose", "Transaction", new { id = item.TransactionId, IsApproved = true }, new { })</li>
